<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for WebSocket connections -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Camera permission for QR code scanning -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Foreground service permission for background connections -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ClaudeCodeMonitor"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ClaudeCodeMonitor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- QR Scanning Activity -->
        <activity
            android:name=".activities.QRScanActivity"
            android:exported="false"
            android:theme="@style/Theme.ClaudeCodeMonitor" />

        <!-- Session List Activity -->
        <activity
            android:name=".activities.SessionListActivity"
            android:exported="false"
            android:theme="@style/Theme.ClaudeCodeMonitor" />

        <!-- Message Display Activity -->
        <activity
            android:name=".activities.MessageDisplayActivity"
            android:exported="false"
            android:theme="@style/Theme.ClaudeCodeMonitor" />

        <!-- WebSocket Service -->
        <service
            android:name=".services.WebSocketService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>